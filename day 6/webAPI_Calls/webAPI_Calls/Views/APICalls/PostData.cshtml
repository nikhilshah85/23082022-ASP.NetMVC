<h1> Welcome to Post Data </h1>
<script>

    function getPostDetails()
    {

        fetch('https://jsonplaceholder.typicode.com/posts').then( response => response.json())
                                                           .then(data => {
                                                               alert('we got the data');
                                                               console.log(data);

                                                            for(var i=0;i<data.length;i++)
                                                            {
                                                                 $("#tblPostData").append("<tr>" + 
                                                                 "<td>" + data[i].userId + "</td>" +
                                                                 "<td>" + data[i].id + "</td>" +
                                                                 "<td>" + data[i].title + "</td>" +
                                                                 "<td>" + data[i].body + "</td>"                                                                
                                                                                                                                
                                                                 + "</tr>"                                                                                                                            
                                                                )
                                                            }

                                                           

                                                           })
                                                           .catch(err => alert('Errorrrr !!'))
                                                           .finally( ()=> alert('Call Completed'))

    }


</script>

<button class="btn btn-primary" onClick="getPostDetails()"> Get Data </button>
<table class="tbl tbl-bordered" id="tblPostData"></table>