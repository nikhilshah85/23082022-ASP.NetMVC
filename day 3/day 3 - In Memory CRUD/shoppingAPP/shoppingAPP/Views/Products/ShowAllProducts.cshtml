


<h1> Product List </h1>

<table class="table">   
    @foreach(var item  in ViewBag.allProducts)
    {

        @if (item.pIsInStock)
        {
             <tr>
                    <td> @item.pId </td>
                    <td> @item.pName </td>
                    <td> @item.pPrice </td>
                    <td> @item.pCategory </td>
                    <td> @item.pIsInStock </td>
            </tr>
        }
        else
        {
           <tr style="background-color:orangered">
            <td> @item.pId </td>
            <td> @item.pName </td>
            <td> @item.pPrice </td>
            <td> @item.pCategory </td>
            <td> @item.pIsInStock </td>
        </tr>
        }


    }
</table>